<Window x:Class="labfinal:labfinal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:labfinal="clr-namespace:labfinal"
        Title="Course Management" Height="350" Width="500">
    <Grid>
        <DataGrid Name="courseDataGrid" AutoGenerateColumns="True" Margin="10,10,10,50"/>
        <StackPanel Margin="10,250,10,10" Orientation="Horizontal">
            <TextBox x:Name="courseNameTextBox" Width="150" Text="Course Name"/>
            <TextBox x:Name="creditsTextBox" Width="50" Text="Credits"/>
            <Button Content="Add Course" Click="AddCourse_Click"/>
        </StackPanel>
    </Grid>
</Window>
